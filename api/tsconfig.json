{
  "compilerOptions": {
    "module": "commonjs",
    "rootDir": ".",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"]
    }
  },
  "exclude": ["./node_modules/**/*"]
}
